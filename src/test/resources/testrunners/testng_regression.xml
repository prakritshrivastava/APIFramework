<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Regression suite" verbose="4">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.api.listeners.AnnotationTransformer"/>
	</listeners>

	
	<test name="Go Rest Get User">
		<classes>
			<class name="com.qa.api.gorest.tests.GetUserTest" />
		</classes>
	</test>

	<test name="Go Rest Create User">
		<classes>
			<class name="com.qa.api.gorest.tests.CreateUserTest" />
		</classes>
	</test>

	<test name="Go Rest Update User">
		<classes>
			<class name="com.qa.api.gorest.tests.UpdateUserTest" />
		</classes>
	</test>

	<test name="Go Rest Delete User">
		<classes>
			<class name="com.qa.api.gorest.tests.DeleteUserTest" />
		</classes>
	</test>

	<test name="Go Rest Amadeus User">
		<classes>
			<class name="com.qa.api.amadeus.tests.AmadeusAPITest" />
		</classes>
	</test>

	<test name="Go Rest Basis User">
		<classes>
			<class name="com.qa.api.auth.tests.BasicAuthAPITest" />
		</classes>
	</test>

</suite>